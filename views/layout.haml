%html
	%head
		%meta{:charset => "utf-8"}
		%title= @title
		%link{:rel => "stylesheet", :href => "/css/site.css?v=1.2"}
	%body
		.page
			%header
				.text-align-right
					- if defined?(@username)
						%strong
							%a{:href => "/profile"}= @username
							&nbsp;
						%a{:href => "/logoff"} Log Off
					- else
						%strong
							&nbsp;
				%h1 Crolog
			%section
				= yield
			%footer
				.text-align-right
					%a{:href => "https://github.com/dibikhin"} GitHub
					%a{:href => "http://twitter.com/dibikhin"} Twitter
